<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MdawemApp.Views.WorkRegestration"
             Title="Regestration">
    <ContentPage.Content>
        <StackLayout>
            <Frame Padding="0">
                <Entry Placeholder="ID Number "  />
            </Frame>
            <Frame Padding="0">
                <Entry Placeholder="Job Title" />
            </Frame>
           
            <Frame Padding="0" >
                <Entry Placeholder="Work Location"/>
            </Frame>
           
            <Frame Padding="0">
                <Entry Placeholder="Full/Part Time"/>
            </Frame>
            <Label Text="Start Date" />
            <Frame Padding="0">
                <DatePicker FontSize="15" Margin="10,0" MinimumDate="01/01/2018" MaximumDate="12/31/2018" Date="06/21/2018" TextColor="Gray" />
            </Frame>

            <Frame Padding="0">
                <Entry Placeholder="Experience"/>
            </Frame>
            <Button Text="Regesration" Margin="10" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>