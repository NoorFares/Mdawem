<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MdawemApp.Views.notificationPage"
             Title="Notifications">
    <ContentPage.ToolbarItems>
               <ToolbarItem Order="Primary" IconImageSource="notification.png" Priority="0"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
            <StackLayout Margin="10" x:Name="Notifications">
                <ActivityIndicator x:Name="activityIndicator" IsRunning="False" IsVisible="False" />
                <ScrollView>
                    <StackLayout  x:Name="NotificationsListView"  Spacing="3" />
                </ScrollView>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>